<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:padding="5dp"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/flagview"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/txt_data"
                android:layout_alignBottom="@+id/txt_time"
                android:background="@color/colorPrimary"/>

            <TextView
                android:id="@+id/txt_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/flagview"
                android:layout_alignParentTop="true"
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textIsSelectable="true"
                android:maxLines="5"
                android:text=""
                android:background="#FFF2B5"
                 />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:layout_toRightOf="@+id/flagview"
                android:layout_below="@+id/txt_data"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="italic"
                android:text="45/56/8023 "
                android:background="#FFB900"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

